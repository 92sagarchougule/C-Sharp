using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace ConsoleApplication12
{
    class Program
    {
        static void Main(string[] args)
        {
            for(int a=6; a>0; a--)
            {
                for(int j=0; j<a; j++)
                {
                    Console.Write(j + " ");
                }
                Console.WriteLine();
            }
            Console.Read();
        }
    }
}
