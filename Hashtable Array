            prj.Add("Add Name : ", Console.ReadLine());

            Console.WriteLine("Address");
            prj.Add("Address : ", Console.ReadLine());

            Console.WriteLine("City");
            prj.Add("City : ", Console.ReadLine());

            Console.WriteLine("State");
            prj.Add("State : ", Console.ReadLine());

            Console.WriteLine("Country");
            prj.Add("Country : ", Console.ReadLine());



            foreach(var name in prj.Keys)
            {
                Console.WriteLine(name +"-" + prj[name]);
            }



            Console.WriteLine(prj["City : "]);  // Return a key value using key

            

