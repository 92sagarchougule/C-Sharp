using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace ArrayProject12
{
    class Program
    {
        static void Main(string[] args)
        {
            string[] student = new string[5];   // Array Diclaration in c#

            

            for (int i=0; i<student.Length; i++)
            {
                Console.WriteLine("Enter name : " + i + 1);
                student[i] = Console.ReadLine();
            }
            for (int i = 0; i < student.Length; i++)
            {
                Console.WriteLine("Enter name : " + student[i]);
            }

            Console.Read();
        }
    }
}
